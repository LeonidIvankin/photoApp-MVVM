<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="ru.leonidivankin.photoapp_mvvm.viewModel.SingleViewModel" />
        <variable
            name="photo"
            type="ru.leonidivankin.photoapp_mvvm.model.entity.Photo" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--todo androidx.appcompat.widget.AppCompatImageView-->
        <!--todo photoUrl получать из viewModel-->
        <ImageView
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:photoUrl="@{photo.hits.get(0).webformatURL}" />

    </FrameLayout>

</layout>